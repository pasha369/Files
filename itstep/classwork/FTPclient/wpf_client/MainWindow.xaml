<Window x:Class="wpf_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Height="20" Margin="10" Name="txtPath"></TextBox>
            <TextBox Height="20" Margin="10" Name="txtName"></TextBox>
            <TextBox Height="20" Margin="10" Name="txtPasswd"></TextBox>
            <!--<TextBox Height="200" Margin="10" Name="txtFiles"></TextBox>-->
            <TreeView Name="tvFiles" MouseDoubleClick="TvFiles_OnMouseDoubleClick" ScrollViewer.VerticalScrollBarVisibility="Auto"
          ></TreeView>
            <Button Name="btnLoad" Click="BtnLoad_OnClick"> load</Button>
        </StackPanel>
    </Grid>
</Window>
