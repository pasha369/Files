<Window x:Class="Mail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="360" Width="525">
    <Grid>
        <StackPanel>
            <Grid>
                <TextBlock Margin="20 20">from</TextBlock>
                <TextBox Height="20px" Margin="60 20"></TextBox>
            </Grid>
            <Grid>
                <TextBlock Margin="20 20">to</TextBlock>
                <TextBox Height="20px" Margin="60 20"></TextBox>
            </Grid>
            
            <TextBox Height="175px" Name="txtMsg" Margin="5"></TextBox>
            <Button Height="20px" Name="btnSend" Click="BtnSend_OnClick">Send</Button>
        </StackPanel>
    </Grid>
</Window>
